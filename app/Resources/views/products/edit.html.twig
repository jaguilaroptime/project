{% extends 'base.html.twig' %}

{% block content %}
    <!-- Begin page content -->
    <div class="container">
        <div class="page-header">
            <h1>Editar Producto</h1>
        </div>

        <div class="row">
            {{ form_start(form,{'action': path('editproduct',{id : product.id}), 'attr':{'class':'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.code,null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.code,{'attr':{'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.name,null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.name,{'attr':{'class': 'form-control'}}) }}
                    </div>
                </div>

            <div class="form-group">
                {{ form_label(form.description,null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.description,{'attr':{'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.trademark,null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.trademark,{'attr':{'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.category,null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.category,{'attr':{'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.price,null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.price,{'attr':{'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="pull-right">{{ form_widget(form.save,{'attr':{'class': 'btn btn-primary'}}) }}</div>

            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}