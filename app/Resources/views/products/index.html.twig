{% extends 'base.html.twig' %}

{% block javascripts %}
    {% javascripts '@AppBundle/Resources/public/js/bootbox.min.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <!-- Begin page content -->
    <div class="container">
        <div class="page-header">
            <h1>Lista de Productos</h1>
            <a href="{{ path('newproduct')}}" class="btn btn-primary">Nuevo Producto</a>
        </div>

        <!-- Search-->
        {{ form_start(form,{'action': path('listproduct'),'attr':{'class':'form-horizontal', 'novalidate': 'novalidate'}}) }}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Realizar Busqueda</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-4 control-label text-center">{{ form_label(form.code) }}</label>
                        <div class="col-md-6">
                            {{ form_widget(form.code) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label text-center">{{ form_label(form.name) }}</label>
                        <div class="col-md-6">
                            {{ form_widget(form.name) }}
                        </div>
                    </div>
                    <div class="form-group  ">
                        <div class="col-md-10">
                            {{ form_widget(form.search) }}
                            <a href="{{ path('listproduct')}}" class="btn btn-default pull-right">Limpiar</a>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}

        <br/>
        {% if pagination is not empty %}
            {# total items count #}
            <div class="count">
                <span class="label label-primary s16">
                    Entradas en total: {{ pagination.getTotalItemCount }}
                </span>
            </div>
            <br/>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Descipción</th>
                            <th>Marca</th>
                            <th>Categoria</th>
                            <th>Precio</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in pagination %}
                        <tr>
                            <td>{{ product.code }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.description }}</td>
                            <td>{{ product.trademark }}</td>
                            <td>{{ product.category }}</td>
                            <td>{{ product.price }}</td>
                            <td>
                                <a href="{{ path('editproduct',{id : product.id})}}">
                                    <img src="{{ asset('bundles/app/images/edit.png') }}" width="15px" height="15px"/>
                                </a>
                            </td>
                            <td>
                                <a onclick="confirmDelete({{ product.id }})">
                                    <img src="{{ asset('bundles/app/images/delete.png') }}" width="15px" height="15px"/>
                                </a>
                            </td>
                        </tr>

                    {%  endfor %}
                    </tbody>
                </table>
            </div>

            {# display navigation #}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        {# No existen productos #}
        {% else %}
            <div class="alert alert-warning" role="alert">
                No existen productos.
            </div>
        {% endif %}
    </div>

    <script>
        function confirmDelete(id) {
            bootbox.confirm({
                message: "Desea eliminar el producto?",
                buttons: {
                    confirm: {
                        label: 'Yes',
                        className: 'btn-success'
                    },
                    cancel: {
                        label: 'No',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        window.location = 'delete/'+parseInt(id);
                        return false;
                    }

                }
            });
        }
    </script>

{% endblock %}