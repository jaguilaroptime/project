{% extends 'base.html.twig' %}

{% block content %}
    <!-- Begin page content -->
    <div class="container">
        <div class="page-header">
            <h1>Nuevo Producto</h1>
        </div>

        {% form_theme form 'bootstrap_3_layout.html.twig' %}

        <div class="row">
            {{ form_start(form,{'action': path('newproduct'),'attr':{'class':'form-horizontal', 'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    <div class="col-sm-10">
                        {{ form_widget(form) }}
                    </div>
                    {{ form_errors(form) }}
                </div>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}